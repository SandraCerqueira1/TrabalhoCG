<world>
	<window width="512" height="512" />
	<camera>
		<position x="30" y="40" z="80" />
		<lookAt x="0" y="0" z="0" />
		<up x="0" y="1" z="0" />
		<projection fov="30" near="1" far="1000" />
	</camera>
	<group>
		<group>
			<transform>
				<scale x="20" y="20" z="20"/>
			</transform>
			<models>
				<model file="sphere.3d">
					<color r="1.0" g="1.0" b="0.0" />
					<!-- Sol -->
				</model>
			</models>
		</group>
		<group>
			<transform>
				<translate x="24" y="0" z="0"/>
			</transform>
			<group>
				<transform>
					<scale x="0.3" y="0.3" z="0.3"/>
				</transform>
				<models>
					<model file="sphere.3d">
						<color r="0.5" g="0.5" b="0.5" />
						<!-- Mercúrio -->
					</model>
				</models>
			</group>
			<group>
				<transform>
					<translate x="5" y="0" z="0"/>
				</transform>
				<group>
					<transform>
						<scale x="0.5" y="0.5" z="0.5"/>
					</transform>
					<models>
						<model file="sphere.3d">
							<color r="1.0" g="0.5" b="0.0" />
							<!-- Vénus -->
						</model>
					</models>
				</group>
				<group>
					<transform>
						<translate x="5" y="0" z="0"/>
					</transform>
					<group>
						<transform>
							<scale x="0.5" y="0.5" z="0.5"/>
						</transform>
						<models>
							<model file="sphere.3d">
								<color r="0.0" g="0.0" b="1.0" />
								<!-- Terra -->
							</model>
						</models>
					</group>
					<group>
						<transform>
							<translate x="0" y="0" z="1"/>
							<scale x="0.1" y="0.1" z="0.1"/>
						</transform>
						<models>
							<model file="sphere.3d">
								<color r="0.5" g="0.5" b="0.5" />
								<!-- Lua -->
							</model>
						</models>
					</group>
					<group>
						<transform>
							<translate x="5" y="0" z="0"/>
						</transform>
						<group>
							<transform>
								<scale x="0.4" y="0.4" z="0.4"/>
							</transform>
							<models>
								<model file="sphere.3d">
									<color r="1.0" g="0.0" b="0.0" />
									<!-- Marte -->
								</model>
							</models>
						</group>
						<group>
							<transform>
								<translate x="10" y="0" z="0"/>
							</transform>
							<group>
								<transform>
									<scale x="6" y="6" z="6"/>
								</transform>
								<models>
									<model file="sphere.3d">
										<color r="0.4" g="0.2" b="0.0" />
										<!-- Júpiter -->
									</model>
								</models>
							</group>
							<group>
								<transform>
									<translate x="24" y="0" z="0"/>
								</transform>
								<group>
									<transform>
										<scale x="5" y="5" z="5"/>
									</transform>
									<models>
										<model file="sphere.3d">
											<color r="0.9" g="0.8" b="0.6" />
											<!-- Saturno -->
										</model>
									</models>
								</group>
								<group>
									<transform>
										<rotate angle="20" x="1" y="0" z="1"/>
										<scale x="5" y="5" z="5"/>
									</transform>
									<models>
										<model file="anel.3d">
											<color r="0.9" g="0.8" b="0.6" />
											<!-- Anel de Saturno -->
										</model>
									</models>
								</group>
								<group>
									<transform>
										<translate x="20" y="0" z="0"/>
									</transform>
									<group>
										<transform>
											<scale x="3" y="3" z="3"/>
										</transform>
										<models>
											<model file="sphere.3d">
												<color r="0.1" g="0.8" b="0.6" />
												<!-- urano -->
											</model>
										</models>
									</group>
									<group>
										<transform>
											<translate x="10" y="0" z="0"/>
										</transform>
										<group>
											<transform>
												<scale x="3" y="3" z="3"/>
											</transform>
											<models>
												<model file="sphere.3d">
													<color r="0.0" g="0.0" b="0.5" />
													<!-- Neptuno -->
												</model>
											</models>
										</group>
									</group>
								</group>
							</group>
						</group>
					</group>
				</group>
			</group>
		</group>
	</group>
</world>